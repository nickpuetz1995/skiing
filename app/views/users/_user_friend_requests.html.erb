<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Friend Requests

    <a data-toggle="collapse" href="#user_friend_requests_new_form">
      Add friend
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.friend_requests.each do |friend| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to friend, friend %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_friend_requests_new_form">
        <%= render partial: "users/user_friend_requests_new_form" %>
      </div>
    </div>

  </ul>
</div>
